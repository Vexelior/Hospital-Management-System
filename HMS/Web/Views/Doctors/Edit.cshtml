@model Web.Models.ViewModels.DoctorEditViewModel

@{
    ViewData["Title"] = "Edit Doctor";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Edit Doctor</h1>
            <hr />
            <form asp-action="Edit">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Specialties" class="control-label"></label>
                    <select asp-for="Specialties" class="form-control" asp-items="ViewBag.Specialties"></select>
                    <span asp-validation-for="Specialties" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Practices" class="control-label"></label>
                    <select asp-for="Practices" class="form-control" asp-items="ViewBag.Practices"></select>
                    <span asp-validation-for="Practices" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            <a class="btn btn-secondary text-light mt-2" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
